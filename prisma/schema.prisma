// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"  // ✅ CAMBIO 1: sqlite → postgresql
  url      = env("DATABASE_URL") 
}

model RateHistory {
  id        String   @id @default(cuid())  // ✅ CAMBIO 2: Int → String y autoincrement() → cuid()
  fecha     DateTime @default(now())
  bcv       Float
  paralelo  Float
  euro      Float?
  bcvChange      Float?
  paraleloChange Float?
  euroChange     Float?
  diferencial Float
  fuente    String?
  createdAt DateTime @default(now())
  
  @@index([fecha])
}

model Subscriber {
  id        String   @id @default(cuid())  // ✅ CAMBIO 2: Int → String y autoincrement() → cuid()
  chatId    String   @unique
  nombre    String?
  activo    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}